<p id="notice"><%= notice %></p>

<h1><%= t('.heading') %></h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheep.each do |sheep| %>
      <tr>
        <td><%= sheep.description.html_safe %></td>
        <td><%= sheep.status %></td>
        <td><%= sheep.priority %></td>
        <td><%= link_to 'Show', sheep %></td>
        <td><%= link_to 'Edit', edit_sheep_path(sheep) %></td>
        <td><%= link_to 'Destroy', sheep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sheep', new_sheep_path %>
